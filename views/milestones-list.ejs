<%- include("partials/header") %>
<%- include("partials/nav") %>

<!-- PAGE HEADER WITH ADD BUTTON -->
<div class="page-header">
    <h1 class="section-header">Milestones</h1>

    <form method="GET" action="" class="search-bar">

        <input 
            type="text" 
            name="search"
            placeholder="Search..."
            value="<%= search || '' %>">
    
        <button type="submit" class="btn btn-primary">Search</button>
    
        <a href="<%= clearPath %>" class="btn btn-secondary">Clear</a>
    
    </form>
    
    <% if (user && user.level === "M") { %>
        <a class="btn btn-primary add-btn" href="/milestones/edit">
            Add Milestone
        </a>
    <% } %>
</div>

<div class="card">

    <% if (milestones.length > 0) { %>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>Participant Email</th>
                    <th>Title</th>
                    <th>Date</th>
                    <% if (user.level === "M") { %>
                        <th>Actions</th>
                    <% } %>
                </tr>
            </thead>

            <tbody>
                <% milestones.forEach(m => { 
                
                    // 1. FORMAT DATE & TIME
                    // This turns "2025-12-04T00:44" into "12/4/2025, 12:44 AM"
                    let dateDisplay = "";
                    if (m["Milestone Date"]) {
                        dateDisplay = new Date(m["Milestone Date"]).toLocaleString("en-US", { 
                            timeZone: "UTC", 
                            month: "numeric", 
                            day: "numeric", 
                            year: "numeric",
                            hour: "numeric", 
                            minute: "2-digit"
                        });
                    }
                %>
                    <tr>
                        <td><%= m.ParticipantEmail %></td>
                        <td><%= m["Milestone Title"] %></td>
                        
                        <td><%= dateDisplay %></td>

                        <% if (user.level === "M") { %>
                            <td class="actions-column">

                                <a class="btn btn-secondary btn-small"
                                   href="/milestones/edit/<%= m.ParticipantEmail %>/<%= encodeURIComponent(m['Milestone Date']) %>">
                                    Edit
                                </a>

                                <form action="/milestones/delete/<%= m.ParticipantEmail %>/<%= encodeURIComponent(m['Milestone Date']) %>"
                                      method="POST"
                                      style="display:inline;">
                                    <button class="btn btn-danger btn-small"
                                            onclick="return confirm('Delete milestone?');">
                                        Delete
                                    </button>
                                </form>

                            </td>
                        <% } %>

                    </tr>
                <% }) %>
            </tbody>
        </table>

    <% } else { %>
        <p>No milestones recorded.</p>
    <% } %>


</div>

<%- include("partials/footer") %>