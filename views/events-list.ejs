<%- include("partials/header") %>
<%- include("partials/nav") %>

<!-- PAGE HEADER WITH ADD BUTTON -->
<div class="page-header">
    <h1 class="section-header">Events</h1>
    <form method="GET" action="" class="search-bar">

        <input 
            type="text" 
            name="search"
            placeholder="Search..."
            value="<%= search || '' %>">
    
        <button type="submit" class="btn btn-primary">Search</button>
    
        <a href="<%= clearPath %>" class="btn btn-secondary">Clear</a>
    
    </form>
    
    <% if (user && user.level === "M") { %>
        <a class="btn btn-primary add-btn" href="/events/edit">
            Add Event 
        </a>
    <% } %>
</div>

<div class="card">

    <% if (events && events.length > 0) { %>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>Occurrence ID</th>
                    <th>Event Name</th>
                    <th>Event Type</th>
                    <th>Description</th>
                    <th>Recurrence</th>
                    <th>Default Capacity</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th>Deadline</th>
                    <% if (user && user.level === "M") { %>
                        <th>Actions</th>
                    <% } %>
                </tr>
            </thead>

            <tbody>
                <% events.forEach(e => { 
                
                    // 1. HELPER: Format Date & Time (Removes the 'T' and adds AM/PM)
                    // "2025-12-04T00:39" -> "12/4/2025, 12:39 AM"
                    function formatDT(isoStr) {
                        if (!isoStr) return "";
                        return new Date(isoStr).toLocaleString("en-US", { 
                            timeZone: "UTC",      // Prevents date shifting
                            month: "numeric", 
                            day: "numeric", 
                            year: "numeric", 
                            hour: "numeric", 
                            minute: "2-digit"
                        });
                    }

                    // 2. HELPER: Format Numbers (Ensures 5.0 or 100.0)
                    function formatNum(num) {
                         if (num === null || num === undefined) return "";
                         return Number(num).toFixed(1);
                    }
                %>
                    <tr>
                        <td><%= e.EventOccurrenceID %></td>
                        <td><%= e.EventName %></td>
                        <td><%= e.EventType %></td>
                        <td><%= e.EventDescription %></td>
                        <td><%= e.EventRecurrencePattern %></td>
                        
                        <td><%= formatNum(e.EventDefaultCapacity) %></td>

                        <td><%= formatDT(e.EventDateTimeStart) %></td>
                        <td><%= formatDT(e.EventDateTimeEnd) %></td>
                        
                        <td><%= e.EventLocation %></td>
                        
                        <td><%= formatNum(e.EventCapacity) %></td>
                        
                        <td><%= formatDT(e.EventRegistrationDeadline) %></td>

                        <% if (user && user.level === "M") { %>
                            <td class="actions-column">

                                <a class="btn btn-secondary btn-small" 
                                   href="/events/edit/<%= e.EventOccurrenceID %>">
                                    Edit
                                </a>

                                <form action="/events/delete/<%= e.EventOccurrenceID %>" 
                                      method="POST" style="display:inline;">
                                    <button type="submit" 
                                            class="btn btn-danger btn-small"
                                            onclick="return confirm('Delete this event occurrence?');">
                                        Delete
                                    </button>
                                </form>

                            </td>
                        <% } %>

                    </tr>
                <% }) %>
            </tbody>
        </table>

    <% } else { %>
        <p>No events have been added yet.</p>
    <% } %>

</div>

<%- include("partials/footer") %>
