<%- include("partials/header") %>
<%- include("partials/nav") %>

<h1 class="section-header">Donations</h1>

<!-- Manager Only: Add Donation Button -->
<% if (locals.user && locals.user.level === "M") { %>
<div class="button-right">
    <a class="btn btn-primary" href="/donations/edit">Add Donation</a>
</div>
<% } %>

<div class="card">

    <% if (donations.length > 0) { %>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Participant Email</th>
                    <th>Donation Date</th>
                    <th>Amount</th>

                    <% if (locals.user && locals.user.level === "M") { %>
                        <th class="actions-header">Actions</th>
                    <% } %>
                </tr>
            </thead>

            <tbody>
                <% donations.forEach(d => { %>

                    <%
                        // --- FORMAT DATE ---
                        const dateVal =
                            d["Donation Date"] && d["Donation Date"] !== "UNKNOWN_DATE"
                                ? d["Donation Date"]
                                : "";

                        // --- FORMAT AMOUNT (remove $ , and spaces)
                        let rawAmt = (d["Donation Amount"] || "")
                            .replace("$", "")
                            .replace(/,/g, "")
                            .trim();

                        const amtNum = Number(rawAmt);
                        const displayAmt = isNaN(amtNum) ? "" : "$" + amtNum.toFixed(2);
                    %>

                    <tr>
                        <td><%= d.DonationID %></td>
                        <td><%= d.ParticipantEmail %></td>
                        <td><%= dateVal %></td>
                        <td><%= displayAmt %></td>

                        <% if (locals.user && locals.user.level === "M") { %>
                        <td class="actions-column">

                            <!-- EDIT BUTTON -->
                            <a class="btn btn-secondary btn-small"
                               href="/donations/edit/<%= d.ParticipantEmail %>/<%= d['Donation Date'] %>">
                                Edit
                            </a>

                            <!-- DELETE BUTTON -->
                            <form action="/donations/delete/<%= d.ParticipantEmail %>/<%= d['Donation Date'] %>" 
                                  method="POST"
                                  style="display:inline;">
                                <button class="btn btn-danger btn-small"
                                        onclick="return confirm('Delete donation?');">
                                    Delete
                                </button>
                            </form>

                        </td>
                        <% } %>

                    </tr>

                <% }) %>
            </tbody>
        </table>

    <% } else { %>
        <p>No donations recorded.</p>
    <% } %>

</div>

<%- include("partials/footer") %>
